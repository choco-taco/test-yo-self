<div class="container">
    <div class="row">
        <div class="col col-md-10 mx-auto">
            
            <h1>Welcome, {{username}}</h1>
            <div class="row">
                <div class="col col-md-7 mx-auto" id="card-container">
                    <h1>Leader: {{leader}}</h1>
                    <p><b>Group:</b> {{groupName}}</p>
                    <p><b>Guide:</b> {{guideName}}</p>
                    <p><b>Session:</b> {{sessionName}}</p>
                    <div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="card-header">Problem <span id="problem-number"></span></div>
                        <div class="card-body">
                            <h4 class="card-title" id="problem-title"></h4>
                            <p class="card-text" id="problem-text"></p>
                        </div>
                    </div>
                </div>
                <div class="col col-md-5 mx-auto">
                    <ul id="messages" style="height: 500px; overflow-y: auto;"></ul>
                    <form action="">
                        <input id="m" autocomplete="off" /><button id="btn-chat">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>