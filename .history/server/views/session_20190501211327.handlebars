<div class="container" style="width:50%">
    <div class="row">
        <div class="col">
            <h1 class="display-3 mt-3">Hello, {{username}}</h1>
            <h4><i class="fas fa-crown"></i> {{leader}}</h4>
        </div>
    </div>
    <div class="row">
         <div class="col" id="card-container">
        
            <div class="card text-white bg-primary mb-3" id="problem-card">
                <div class="card-header">Question <span id="problem-number"></span></div>
                <div class="card-body">
                    <h4 class="card-title text-center" id="problem-title"></h4>
                    <h1 class="card-text text-center" id="problem-text"></h1>
                </div>
            </div>
        </div>
        <div class="col">
             <ul class="list-group mb-3" style="width:50%">
                <li class="list-group-item d-flex">
                    <i class="fas fa-users mr-3"></i>
                    <span class="badge badge-primary badge-pill">{{groupName}}</span>
                </li>
                <li class="list-group-item d-flex">
                    <i class="far fa-file-alt mr-3"></i>
                    <span class="badge badge-secondary badge-pill">{{guideName}}</span>
                </li>
                <li class="list-group-item d-flex">
                    <i class="fas fa-graduation-cap mr-3"></i>
                    <span class="badge badge-primary badge-pill">{{sessionName}}</span>
                </li>
            </ul>
            <div class="card mt-3">
                <div class="card-body">
                    <ul id="messages" style="height: 100px; overflow-y: auto;"></ul>
                </div>
            </div>
            <form action="">
                <input class="form-control mb-2 mt-2" id="m" autocomplete="off" /><button class="btn btn-secondary" id="btn-chat">Send</button>
            </form>
        </div>
    </div>
    <div class="row">
       
    </div>
</div>
</div>
<div class="row">

</div>
</div>