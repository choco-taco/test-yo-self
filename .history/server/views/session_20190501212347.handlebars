<div class="container" style="width:70%">
    <div class="row">
        <div class="col">
            <h1 class="display-3 mt-5 text-center mb-5">Feel the Learn, {{username}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col" id="card-container">
            <div class="card text-white bg-primary mb-3" id="problem-card">
                <div class="card-header">Question <span id="problem-number"></span></div>
                <div class="card-body">
                    <h4 class="card-title text-center" id="problem-title"></h4>
                    <h1 class="card-text text-center" id="problem-text"></h1>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="container" style="width:80%">
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex">
                        <i class="fas fa-crown mr-3"></i>
                        <span class="badge badge-secondary badge-pill">Leader {{leader}}</span>
                    </li>
                    <li class="list-group-item d-flex">
                        <i class="fas fa-users mr-3"></i>
                        <span class="badge badge-primary badge-pill">{{groupName}}</span>
                    </li>
                    <li class="list-group-item d-flex">
                        <i class="far fa-file-alt mr-3"></i>
                        <span class="badge badge-secondary badge-pill">{{guideName}}</span>
                    </li>
                    <li class="list-group-item d-flex">
                        <i class="fas fa-graduation-cap mr-3"></i>
                        <span class="badge badge-primary badge-pill">{{sessionName}}</span>
                    </li>
                </ul>
                <div class="card mt-3">
                    <div class="card-body">
                        <ul id="messages" style="height: 300px; overflow-y: auto;"></ul>
                    </div>
                </div>
                <form action="">
                    <input class="form-control mb-2 mt-2" id="m" autocomplete="off" style="width:100%" />
                </form>
                <button class="btn btn-secondary" id="btn-chat">Send</button>
            </div>
        </div>
    </div>
    <div class="row">

    </div>
</div>
</div>
<div class="row">

</div>
</div>