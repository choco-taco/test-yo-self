<div class="container" style="width:50%">
    <div class="row">
        <div class="col">
            <h1>Hello, {{username}}</h1>
            <h4>Session Leader: {{leader}}</h4>
            <div class="row">
                <div class="col" id="card-container">

                    <p><b>Group:</b> {{groupName}}</p>
                    <p><b>Guide:</b> {{guideName}}</p>
                    <p><b>Session:</b> {{sessionName}}</p>
                    <div class="card text-white bg-secondary mb-3">
                        <div class="card-header">Problem <span id="problem-number"></span></div>
                        <div class="card-body">
                            <h4 class="card-title text-center" id="problem-title"></h4>
                            <h1 class="card-text text-center" id="problem-text"></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card mt-3">
                <div class="card-body">
                    <ul id="messages" style="height: 100px; overflow-y: auto;"></ul>
                </div>
            </div>
            <form action="">
                <input class="form-control mb-2 mt-2" id="m" autocomplete="off" /><button class="btn btn-primary" id="btn-chat">Send</button>
            </form>
        </div>
    </div>
</div>