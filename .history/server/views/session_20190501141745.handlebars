<div class="container" style="width:50%">
    <div class="row">
        <div class="col">
            <h1 class="display-3 mt-3">Hello, {{username}}</h1>
            <h4>Session Leader: {{leader}}</h4>

            <div class="row">

                <div class="col mb-3" id="card-container">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <b>Group:</b> {{groupName}}
                            <span class="badge badge-primary badge-pill">14</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Guide:</b> {{guideName}}
                            <span class="badge badge-primary badge-pill">2</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Session:</b> {{sessionName}}
                            <span class="badge badge-primary badge-pill">1</span>
                        </li>
                    </ul>
                    <div class="card text-white bg-primary mb-3" id="problem-card">
                        <div class="card-header">Question <span id="problem-number"></span></div>
                        <div class="card-body">
                            <h4 class="card-title text-center" id="problem-title"></h4>
                            <h1 class="card-text text-center" id="problem-text"></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card mt-3">
                <div class="card-body">
                    <ul id="messages" style="height: 100px; overflow-y: auto;"></ul>
                </div>
            </div>
            <form action="">
                <input class="form-control mb-2 mt-2" id="m" autocomplete="off" /><button class="btn btn-primary" id="btn-chat">Send</button>
            </form>
        </div>
    </div>
</div>